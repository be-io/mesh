    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>3.0.0-M1</version>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                    <release>8</release>
                    <encoding>UTF-8</encoding>
                    <useIncrementalCompilation>true</useIncrementalCompilation>
                    <compilerArgs>
                        <arg>-parameters</arg>
                        <arg>-verbose</arg>
                        <arg>-Xlint:all,-options,-path</arg>
                        <!--
                        <arg>-add-exports</arg>
                        <arg>com.google.gson/com.google.gson.internal=com.be.mesh.client</arg>
                        <arg>-add-exports</arg>
                        <arg>com.google.gson/com.google.gson.internal.bind=com.be.mesh.client</arg>
                        <arg>-add-exports</arg>
                        <arg>com.google.gson/com.google.gson.internal.reflect=com.be.mesh.client</arg>
                        -->
                    </compilerArgs>
                    <excludes>
                        <exclude>module-info.java</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>schema-process</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <inherited>true</inherited>
                        <configuration>
                            <compilerArgs>
                                <arg>-parameters</arg>
                                <arg>-Xlint:all,-options,-path</arg>
                                <arg>-Amesh.schema.enable=false</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                    <execution>
                        <id>default-compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <inherited>true</inherited>
                        <configuration>
                            <fork>false</fork>
                            <compilerArgs>
                                <arg>-parameters</arg>
                                <arg>-Xlint:all,-options,-path</arg>
                                <arg>-proc:only</arg>
                                <arg>-processor</arg>
                                <arg>com.be.mesh.client.schema.context.JavacCompileProcessor</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                    <execution>
                        <id>compile-java-16</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <release>16</release>
                            <multiReleaseOutput>true</multiReleaseOutput>
                            <compileSourceRoots>
                                <compileSourceRoot>${project.basedir}/src/main/java16</compileSourceRoot>
                            </compileSourceRoots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Add module-info to JAR, see https://github.com/moditect/moditect#adding-module-descriptors-to-existing-jar-files -->
            <!-- Uses ModiTect instead of separate maven-compiler-plugin executions for better Eclipse IDE support, see https://github.com/eclipse-m2e/m2e-core/issues/393 -->
            <!-- Overwrite the previously generated JAR file, if any -->
